@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.0.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;
            // Create a function that the hub can call back to display messages.
            chat.client.addNewMessageToPage = function (name, message) {
                // Add the message to the page.
                var html = "<article id='chat-id-1' class='chat-item left'>";
                html += "<a href='#' class='pull-left thumb-sm avatar'><img src='/Content/ScaleTheme/images/a2.png'></a>";
                html += "<section class='chat-body'>";
                html += "<div class='panel b-light text-sm m-b-none'>";
                html += "<div class='panel-body'>";
                html += "<span class='arrow left'></span>";
                html += "<p class='m-b-none'>"+message+"</p>";
                html += "</div>";
                html += "</div>";
                html += "<small class='text-muted'><i class='fa fa-ok text-success'></i> "+ name +"</small>";
                html += "</section>";
                html += "</article>";

                $('#chatContainer').append(html);

                var $t = $('#chatContainer');
                var scrollTo = $('#chatContainer')[0].scrollHeight + 50;
                $("#chatContainer").slimScroll({ scrollTo: scrollTo });
            };
            // Get the user name and store it to prepend to messages.
            $('#displayname').val(prompt('Enter your name:', ''));
            // Set initial focus to message input box.
            $('#messageContainer').focus();


            // Start the connection.
            $.connection.hub.start().done(function () {
                $("#messageForm").submit(function (e) {
                    sendMessage();
                    return false;
                });
                //$('#sendMessage').click(function () {
                //    //$t.animate({ "scrollTop": $('#chatContainer')[0].scrollHeight }, "slow");
                //    // Call the Send method on the hub.
                    
                //});
            });

            function sendMessage() {
                chat.server.send($('#displayname').val(), $('#messageContainer').val());
                // Clear text box and reset focus for next comment.
                $('#messageContainer').val('').focus();
            }
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }

       

    </script>
}
